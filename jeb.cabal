name:                 jeb
version:              0.1.0.1
-- synopsis:
-- description:
license:              GPL-3
license-file:         LICENSE
author:               Edmund Noble
maintainer:           edmundnoble@gmail.com
-- copyright:
category:             Text
build-type:           Simple
extra-source-files:   ChangeLog.md
cabal-version:        >=2.00

executable jeb
  main-is:            Main.hs
  hs-source-dirs:     .
  ghc-options:        -Wall -threaded +RTS -N -RTS
  build-depends:      base >=4.10 && <4.13
                    , ansi-terminal
                    , ansi-wl-pprint
                    , containers
                    , deepseq
                    , directory
                    , Diff
                    , filepath
                    , lens
                    , mtl
                    , optparse-applicative
                    , semigroups
                    , semigroupoids
                    , split
                    , time
                    , transformers
                    , unix
                    , jeb-lib
                    , validation
  default-language:   Haskell2010

library jeb-lib
  hs-source-dirs:     src
  ghc-options:        -Wall
  exposed-modules:    Jeb.CLI
                    , Jeb.ErrT
                    , Jeb.Logging
                    , Jeb.Indexing.Main, Jeb.Indexing.Types
                    , Jeb.Indexing.Streengs
  build-depends:      base >=4.10 && <4.13
                    , ansi-terminal
                    , ansi-wl-pprint
                    , containers
                    , deepseq
                    , directory
                    , Diff
                    , filepath
                    , foldl
                    , lens
                    , mtl
                    , optparse-applicative
                    , semigroups
                    , semigroupoids
                    , split
                    , time
                    , transformers
                    , unix
                    , validation
  default-language:   Haskell2010

test-suite doctests
  type:          exitcode-stdio-1.0
  ghc-options:   -threaded
  main-is:       doctests.hs
  build-depends: base, directory, doctest >= 0.10, filepath
